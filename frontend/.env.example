# =============================================================================
# INVOICER FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to frontend/.env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL (including /api/v1 path)
# Development: http://localhost:5000/api/v1
# Production: https://your-api-domain.com/api/v1 (or leave empty for relative paths)
REACT_APP_API_URL=http://localhost:5000/api/v1

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name (displayed in browser tab)
REACT_APP_NAME=Invoicer

# Version (displayed in footer)
REACT_APP_VERSION=1.0.0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development tools
REACT_APP_DEV_TOOLS=true

# Enable detailed error logging
REACT_APP_DETAILED_ERRORS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable registration for new users
REACT_APP_REGISTRATION_ENABLED=true

# Enable dark mode toggle
REACT_APP_DARK_MODE_ENABLED=true

# =============================================================================
# ANALYTICS & TRACKING (Optional)
# =============================================================================
# Google Analytics tracking ID (if needed)
# REACT_APP_GA_TRACKING_ID=GA-XXXXXXXX-X

# Sentry DSN for error tracking (if needed)
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# =============================================================================
# NOTES
# =============================================================================
# 1. Only variables prefixed with REACT_APP_ are accessible in the frontend
# 2. These values are embedded in the build and publicly accessible
# 3. Never include sensitive data in frontend environment variables
# 4. Restart the development server after changing these values